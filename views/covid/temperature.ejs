<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/works.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
        <div class="grid">
            <article class="user-content">
                <h2 class="mb-3 ml-4 user-name">
                    <%= user.name %>
                </h2>
                <form action="/covid/temperature" method="POST">
                    <h5>Ngày: <%= date %> </h5>
                    </br>
                    <h5>
                        Nhiệt độ: 
                        <input type="number" id="temperature" name="temperature" min="0.0" max="100.0" value="36"  step="0.1"/> 
                        độ C
                    </h5>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="hidden" value="<%= user._id %>" name="userId">
                    <button type="submit" class="btn btn-shimmer btn-primary mt-5">Cập nhật thông tin</button>
                </form>
            </article>
        </div>
    <%- include('../includes/end.ejs') %>
</body>